$hightlightBgCommonColor = #eee
$hightlightBorderCommonColor = #fff
$hightlightTextCommonColor = #666

$hightlightBgDarkColor = #222
$hightlightBorderDarkColor = #000
$hightlightTextDarkColor = #fff

.entry
  .gist
    background $hightlightBgCommonColor
    border 1px solid $hightlightBorderCommonColor
    margin 15px 0px
    padding 7px 15px
    border-radius 2px
    text-shadow 0 0 1px $hightlightBorderCommonColor
    line-height 1.6
    overflow auto
    color $hightlightTextCommonColor
    .gist-file
      border none
      font-family inherit
      margin 0
      font-size 0.9em
      .gist-data
        background none
        border-bottom none
        pre
          padding 0 !important
          font-family font-mono
      .gist-meta
        background none
        color color-meta
        margin-top 5px
        padding 0
        text-shadow 0 0 1px $hightlightBorderCommonColor
        font-size 100%
        a
          color color-link
          &:visited
            color color-link

figure.highlight
  background $hightlightBgCommonColor
  border 1px solid color-border
  margin 1em 0
  padding 1em
  border-radius 2px
  text-shadow 0 0 1px $hightlightBorderCommonColor
  line-height 1.6
  overflow auto
  position relative
  font-size 0.9em
  figcaption
    color color-meta
    margin-bottom 5px
    text-shadow 0 0 1px $hightlightBorderCommonColor
    a
      position absolute
      right 15px

  pre
    border none
    padding 0
    margin 0

  table
    margin-top 0
    border-spacing 0

  .gutter
    color color-meta
    width 20px
    padding-right 15px
    border-right 1px solid color-border
    text-align right

  .code
    padding-left 15px
    border-left 1px solid $hightlightBorderCommonColor
    color $hightlightTextCommonColor

  .line
    height: 20px

pre
  // Theme: Solarized - Light
  // More theme here: https://highlightjs.org/static/demo/
  .comment
  .template_comment
  .diff .header
  .doctype
  .pi
  .lisp .string
  .javadoc
    color #93a1a1
    font-style italic

  .keyword
  .winutils
  .method
  .addition
  .css .tag
  .request
  .status
  .nginx .title
    color #859900

  .number
  .command
  .string
  .tag .value
  .phpdoc
  .tex .formula
  .regexp
  .hexcolor
    color #2aa198

  .title
  .localvars
  .chunk
  .decorator
  .built_in
  .identifier
  .vhdl
  .literal
  .id
    color #268bd2

  .attribute
  .variable
  .lisp .body
  .smalltalk .number
  .constant
  .class .title
  .parent
  .haskell .type
    color #b58900

  .preprocessor
  .preprocessor .keyword
  .shebang
  .symbol
  .symbol .string
  .diff .change
  .special
  .attr_selector
  .important
  .subst
  .cdata
  .clojure .title
    color #cb4b16

  .deletion
    color #dc322f

@media (prefers-color-scheme dark)
  .entry
    .gist
      background $hightlightBgDarkColor
      border 1px solid $hightlightBorderDarkColor
      text-shadow 0 0 1px $hightlightBorderDarkColor
      color $hightlightTextDarkColor
      .gist-file
        .gist-meta
          text-shadow 0 0 1px $hightlightBorderDarkColor

  figure.highlight
    background $hightlightBgDarkColor
    text-shadow 0 0 1px $hightlightBorderDarkColor
    figcaption
      text-shadow 0 0 1px $hightlightBorderDarkColor

    .code
      border-left 1px solid $hightlightBorderDarkColor
      color $hightlightTextDarkColor

  pre
    // Theme: Solarized - Dark
    .comment
    .template_comment
    .diff .header
    .doctype
    .pi
    .lisp .string
    .javadoc
      color #586e75
